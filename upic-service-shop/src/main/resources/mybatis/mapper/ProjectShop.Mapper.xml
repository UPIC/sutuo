<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.upic.dao.impl.ProjectShopDao">

	<!-- 用户信息表 -->
	<sql id="projectShop"> T_PROJECT_SHOP </sql>
	<resultMap id="beanMap" type="ProjectShop">
		<id column="PROJECT_SHOP_ID" property="id" />
		<result column="VERSION" property="version" />
		<result column="CREATETIME" property="createTime" />
		<result column="T_SHOP_ID" property="shopId" />
		<result column="T_PROJECT_ID" property="projectId" />
		<result column="PROJECT" property="project" />
		<result column="FIELD1" property="field1" />
		<result column="FIELD2" property="field2" />
		<result column="FIELD3" property="field3" />
		<result column="FIELD4" property="field4" />
		<result column="FIELD5" property="field5" />
	</resultMap>

	<insert id="insert" parameterType="ProjectShop" keyProperty="id"
		useGeneratedKeys="true">
		insert into
		<include refid="projectShop" />
		(VERSION, CREATETIME,PROJECT,FIELD1,FIELD2,FIELD3,FIELD4,FIELD5,
		T_SHOP_ID,
		T_PROJECT_ID)
		values (0,
		NOW(),#{project},#{field1},#{field2},#{field3},#{field4},#{field5},#{shopId},#{projectId})
	</insert>

	<update id="update" parameterType="ProjectShop">
		update
		<include refid="projectShop" />
		<set>
			VERSION = #{version}+1,
			FIELD1=#{field1},
			FIELD2=#{field2},
			FIELD3=#{field3},
			FIELD4=#{field4},
			FIELD5=#{field5},
			T_SHOP_ID=#{shopId},
			T_PROJECT_ID=#{projectId},
			PROJECT=#{project}
		</set>
		<where>
			PROJECT_SHOP_ID = #{id} and VERSION = #{version}
		</where>
	</update>
	<select id="getById" parameterType="long" resultMap="beanMap">
		select * from
		<include refid="projectShop" />
		where PROJECT_SHOP_ID = #{id}
	</select>
	<select id="listAll" resultMap="beanMap">
		select * from
		<include refid="projectShop" />
		<where>
			<include refid="condition_sql" />
		</where>
		order by PROJECT_SHOP_ID
	</select>
	
	<select id="listBy" resultMap="beanMap">
		select * from
		<include refid="projectShop" />
		<where>
			<include refid="condition_sql" />
		</where>
		order by PROJECT_SHOP_ID
	</select>

	<delete id="deleteById" parameterType="long">
		delete from
		<include refid="projectShop" />
		where PROJECT_SHOP_ID = #{id}
	</delete>

	<sql id="condition_sql">
		<!-- Equal query -->
		<if test="shopId != null and shopId != ''"> and T_SHOP_ID
			= #{shopId}
		</if>
		<if test="projectId != null and projectId != ''"> and T_PROJECT_ID
			= #{projectId}
		</if>
		<if test="project != null and project != ''"> and PROJECT
			= #{project}
		</if>
	</sql>

	<select id="listPage" parameterType="java.util.Map" resultMap="beanMap">
		select * from
		<include refid="projectShop" />
		<where>
			<include refid="condition_sql" />
		</where>
		order by PROJECT_SHOP_ID desc
	</select>

	<select id="listPageCount" parameterType="java.util.Map"
		resultType="long">
		select count(1) from
		<include refid="projectShop" />
		<where>
			<include refid="condition_sql" />
		</where>
	</select>

</mapper>